# config.env

# ==================== User-Adjustable Variables ====================

# Path to the mutation_analysis folder (adjust this to your local setup)
export BASE_DIR="/path/to/your/mutation_analysis"

# Input files (place these files in the 'inputs' folder inside BASE_DIR)
export REFERENCE_FILE="$BASE_DIR/inputs/template.fasta" # Update with actual FASTA file
export BAM_FILE_1="$INPUT_DIR/dataset1.bam"  # Update with actual filename
export BAM_FILE_2="$INPUT_DIR/dataset2.bam"  # Update with actual filename

# ===================================================================

# ==================== Auto-Generated Variables =====================
# Do not adjust the variables below unless you know what you're doing

# Input and output directories
export INPUT_DIR="$BASE_DIR/inputs"
export RESULTS_DIR="$BASE_DIR/results"

# Tools and scripts directories
export TOOLS_DIR="$BASE_DIR/tools"
export MINIMAP_DIR="$TOOLS_DIR/minimap2"
export SAMTOOLS="$TOOLS_DIR/samtools/samtools" 
export SCRIPTS_DIR="$BASE_DIR/scripts"

# Virtual environment directory
export VENV_DIR="$BASE_DIR/env"

# Output file paths
export FASTA_FILE_1="$RESULTS_DIR/dataset1_output.fasta"
export FASTA_FILE_2="$RESULTS_DIR/dataset2_output.fasta"
export SAM_FILE_1="$RESULTS_DIR/result_dataset1.sam"
export SAM_FILE_2="$RESULTS_DIR/result_dataset2.sam"
